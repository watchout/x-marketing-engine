{
  "name": "x-marketing-engine",
  "version": "1.0.0",
  "description": "AI-powered X (Twitter) marketing automation with multi-LLM refinement",
  "main": "scripts/generate_post_multi_llm.ts",
  "scripts": {
    "generate": "npx ts-node scripts/generate_post_multi_llm.ts generate",
    "generate:dry": "npx ts-node scripts/generate_post_multi_llm.ts generate --dry-run",
    "smart-post": "npx ts-node scripts/smart_post.ts",
    "post:morning": "npx ts-node scripts/auto_post.ts post morning",
    "post:mid_morning": "npx ts-node scripts/auto_post.ts post mid_morning",
    "post:noon": "npx ts-node scripts/auto_post.ts post noon",
    "post:evening": "npx ts-node scripts/auto_post.ts post evening",
    "post:night": "npx ts-node scripts/auto_post.ts post night",
    "dashboard": "node serve.js",
    "dashboard:open": "node serve.js & sleep 1 && open http://localhost:3333",
    "watch": "npx ts-node scripts/watch_influencers.ts watch",
    "research-overseas": "npx ts-node scripts/research_overseas.ts",
    "research-papers": "npx ts-node scripts/research_overseas.ts papers",
    "research-trends": "npx ts-node scripts/research_overseas.ts trends",
    "suggest-replies": "npx ts-node scripts/suggest_replies.ts",
    "reply": "npx ts-node scripts/execute_reply.ts",
    "reply:list": "npx ts-node scripts/execute_reply.ts list",
    "reply:all": "npx ts-node scripts/execute_reply.ts all",
    "metrics": "npx ts-node scripts/collect_metrics.ts collect",
    "analyze": "npx ts-node scripts/analyze_performance.ts analyze",
    "analyze-llm": "npx ts-node scripts/analyze_with_llm.ts",
    "analyze-grok": "npx ts-node scripts/analyze_content_grok.ts",
    "settings-server": "npx ts-node scripts/settings_server.ts",
    "sync": "npx ts-node scripts/sync_x_timeline.ts sync",
    "log:summary": "npx ts-node scripts/logger.ts summary 7",
    "log:daily": "npx ts-node scripts/logger.ts daily",
    "test:connection": "npx ts-node scripts/test_x_connection.ts",
    "account-stats": "npx ts-node scripts/get_account_stats.ts",
    "convert-c7": "npx ts-node scripts/convert_c7_to_pool.ts",
