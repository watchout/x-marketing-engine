    "hypothesis:verify": "npx ts-node scripts/analyze_hypothesis.ts verify",
    "hypothesis:recommend": "npx ts-node scripts/analyze_hypothesis.ts recommend",
    "hypothesis:report": "npx ts-node scripts/analyze_hypothesis.ts report"
