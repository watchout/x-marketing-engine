  "dependencies": {
    "js-yaml": "^4.1.0",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "twitter-api-v2": "^1.15.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.0.0",
    "@vercel/node": "^5.5.28",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "@types/tweetnacl": "^0.20.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
